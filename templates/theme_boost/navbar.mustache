{{!
    Page navbar.

    Note that we use additionalinfo from the clboost template engine settings.
}}
<nav class="fixed-top navbar navbar-light bg-white navbar-expand moodle-has-zindex" aria-label="{{#str}}sitemenubar, admin{{/str}}">
    {{# additionalinfo.isloggedin }}
        <div data-region="drawer-toggle" class="d-flex align-items-center">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}"
                    aria-controls="nav-drawer"
                    type="button"
                    class="btn mr-auto ml-auto"
                    data-action="toggle-drawer"
                    data-side="left"
                    data-preference="drawer-open-nav">
                {{#pix}}i/menubars{{/pix}}
                <span class="sr-only">{{#str}}sidepanel, core{{/str}}</span>
            </button>
        </div>
    {{/ additionalinfo.isloggedin }}
    <div class="d-flex flex-row flex-grow-1 nav-main-content">
        <a href="{{{ config.wwwroot }}}" class="navbar-brand aabtn {{# output.should_display_navbar_logo }}has-logo{{/ output.should_display_navbar_logo }}">
             <span class="logo">
                  <img class="rf-logo" src="{{{ config.wwwroot }}}/theme/{{ additionalinfo.themename }}/pix/rf.png" role="presentation"
                       alt="{{#str}}republiquefrancaise, theme_vetagro{{/str}}">
                 {{# additionalinfo.isloggedin }}<img src="{{output.get_compact_logo_url}}" alt="{{sitename}}"> {{/ additionalinfo.isloggedin }}
                 {{^ additionalinfo.isloggedin }}<img src="{{output.get_logo_url}}" alt="{{sitename}}"> {{/ additionalinfo.isloggedin }}
             </span>
        </a>

        <!-- We display the menu twice here, once the full menu, the second one is a shorter version -->
        <ul class="navbar-nav m-auto d-none d-sm-block m-l-0 d-md-flex justify-content-around">
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
            <!-- custom_menu -->
            {{{ output.custom_menu }}}
        </ul>
        <ul class="navbar-nav m-auto d-flex d-sm-none m-l-0 custom-menu-small justify-content-around">
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
            <!-- custom_menu -->
            {{{ output.custom_menu }}}
        </ul>
        <span class="site-name m-auto text-truncate d-none d-md-inline pl-3">{{{ sitename }}}</span>
    </div>
    <ul class="nav navbar-nav ml-auto">
        <li class="d-none d-lg-block">
            {{{ output.search_box }}}
        </li>
        <!-- user_menu -->
        <li class="nav-item d-flex align-items-center">
            {{{ output.user_menu }}}
        </li>
    </ul>
    <!-- search_box -->
</nav>

